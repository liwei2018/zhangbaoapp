.authentication-reason {
  height: 188rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 10px 40px 0px rgba(0, 0, 0, 0.05);
  border-radius: 10px;
  margin: 20rpx 30rpx 0;
  display: flex;
  align-items: center;
  padding: 0 36rpx;
}

.icon {
  width: 28rpx;
  height: 28rpx;
  background: linear-gradient(360deg, rgba(201, 172, 121, 1) 0%, rgba(243, 217, 172, 1) 100%);
  color: rgba(255, 255, 255, 1);
  border-radius: 14rpx;
  margin-right: 20rpx;
  text-align: center;
  line-height: 28rpx;
  font-size: 24rpx;
}

.reason {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  letter-spacing: 1rpx;
}