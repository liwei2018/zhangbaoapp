/* head */
.view-head {
  width: 100%;
  height: 180rpx;
  background: linear-gradient(45deg,rgba(217,193,146,1) 0%,rgba(201,172,121,1) 100%);
  display: flex;
  align-items: center;
  padding-left: 33rpx;
  position: relative;
}

.head-portrait {
  width: 110rpx;
  height: 110rpx;
  background: rgba(216, 216, 216, 1);
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 55rpx;
}

.portrait-img {
  width: 100%;
  height: 100%;
  border-radius: 55rpx;
}

.head-message {
  color: rgba(255, 255, 255, 1);
  margin-left: 20rpx;
}

.head-message .name {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 45rpx;
}

.head-message .phone {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 33rpx;
  margin-top: 32rpx;
}

.head-set {
  position: absolute;
  top: 60rpx;
  right: 18rpx;
  width: 60rpx;
  height: 60rpx;
}
