.todos {
  margin-top: 22rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 10px 40px 0px rgba(0, 0, 0, 0.05);
  border-radius: 10px;
}

.todos-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 64rpx;
  border-bottom: 1px solid rgba(235, 234, 234, 1);
  padding: 0 29rpx;
}

.todos-top-left {
  display: flex;
  align-items: center;
}

.icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 11rpx;
}

.title {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(74, 70, 70, 1);
}

.todos-top-right {
  display: flex;
  align-items: center;
}

.left {
  width: 29rpx;
  height: 29rpx;
}

.right {
  width: 29rpx;
  height: 29rpx;
}

.page {
  width: 41rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(83, 83, 83, 1);
  margin: 0 18rpx;
}

.todos-middle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  font-weight: 400;
  height: 62rpx;
  border-bottom: 1px solid rgba(235, 234, 234, 1);
  padding: 0 29rpx;
}

.order-id {
  color: rgba(45, 47, 55, 1);
}

.order-status {
  color: rgba(201, 172, 121, 1);
}

.todos-content {
  padding: 0 30rpx;
  height: 206rpx;
  display: flex;
  align-items: center;
}

.content-img {
  width: 165rpx;
  height: 170rpx;
  background: rgba(246, 247, 249, 1);
  border-radius: 10rpx;
  margin-right: 50rpx;
}

.content-message {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-weight: 400;
  font-size: 22rpx;
  color: rgba(159, 159, 159, 1);
  line-height: 30rpx;
}

.message-title {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 1);
  line-height: 33rpx;
}

.message-time {
  margin: 12rpx 0 6rpx;
}


.price {
  color: #C74E46;
}

.line {
  width: 630rpx;
  height: 1px;
  background: rgba(235, 234, 234, 1);
  margin: 0 auto;
}

.todos-btn {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 78rpx;
  padding: 0 30rpx;
}

.btn {
  width: 150rpx;
  height: 54rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(51, 51, 51, 1);
  text-align: center;
  line-height: 54rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(58, 58, 58, 1);
  margin-left: 16rpx;
}

.primary {
  background: rgba(201, 172, 121, 1);
  color: rgba(255, 255, 255, 1);
  border: none;
}

.offer {
  padding: 0 30rpx;
}

.tabs {
  height: 70rpx;
  display: flex;
  text-align: center;
  background-color: #fff;
  border-bottom: 1px solid rgba(246, 246, 246, 1);
}

.tabs-item {
  line-height: 70rpx;
  flex: 1;
  font-size: 26rpx;
  color: rgba(69, 69, 69, 1);
}

.select {
  color: rgba(201, 172, 121, 1);
}

.select .tab-line {
  height: 100%;
  border-bottom: 1rpx solid rgba(201, 172, 121, 1);
  display: inline-block;
}
