/* pages/evaluation/index.wxss */
.eva {
  padding: 30rpx;
  width: 100%;
}
.eva-title {
  height: 66rpx;
  text-align: center;
  line-height: 66rpx;
}
.img {
  width: 100%;
  
  border-radius:  20rpx 20rpx 0 0;
}
.eva-item {
  border-radius: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow:0px 10px 40px 0px rgba(0,0,0,0.15);
}
.tishi-img {
  width: 30rpx;
  height: 30rpx;
  display: block;
}
.tishi-text {
  height:28rpx;
font-size:20rpx;
color:rgba(134,134,134,1);
line-height:28rpx;
text-align: center;
}
.tishi{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


.explain-item-img {
  height: 30rpx;
  width: 30rpx;
  margin-right: 10rpx;
  position: relative;
  top: 5rpx;

}

.explain-item {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 30rpx;
}

.tabs {
  height: 90rpx;
  display: flex;
  text-align: center;
  box-shadow: 0px 1px 0px 0px rgba(245, 245, 245, 1);
}

.tabs-item {
  font-size: 30rpx;
  color: rgba(58, 54, 54, 1);
  line-height: 50rpx;
  flex: 1;

  padding: 20rpx;
}

.line {
  width: 2rpx;
  height: 50rpx;
  background: rgba(245, 245, 245, 1);
  margin-top: 20rpx;
}

.tabs .select .nor {
  display: none;
}

.tabs .select .sel {
  display: inline-block;
}

.tabs .select {
  color: rgba(201, 172, 121, 1);
  box-shadow: 0px 13px 30px 0px rgba(128, 128, 128, 0.1);
}

.shop {
  border: 1rpx solid rgba(220, 220, 220, 1);
}

.shop-img {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.shop-img-item {
  width: 32%;
  height: 150rpx;
  margin: 0 1% 4rpx 0;
}
.msg {
  padding: 30rpx 30rpx 0;
}