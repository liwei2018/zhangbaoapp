page {
  padding: 20rpx 0;
  font-weight: 400;
}

.list-item {
  height: 207rpx;
  background: rgba(255, 255, 255, 1);
  padding: 30rpx;
}

.item-bottom {
  margin-top: 14rpx;
  display: flex;
}

.item-top {
  display: flex;
  align-items: center;
}

.default {
  flex: 1;
  display: inline-block;
  width: 64rpx;
  height: 32rpx;
  background: #FAF1EC;
  color: #DE6530;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  margin-right: 10rpx;
  position: relative;
  bottom: 6rpx;
}

.item-address {
  width: 607rpx;
  font-size: 26rpx;
  color: rgba(74, 70, 70, 1);
}

.address {
  line-height: 44rpx;
}

.edit-btn {
  font-size: 26rpx;
  color: rgba(151, 151, 151, 1);
  height: 44rpx;
  padding-left: 30rpx;
  border-left: 1px solid rgba(216, 216, 216, 1);
}

.name {
  font-size: 32rpx;
  color: rgba(74, 70, 70, 1);
  margin-right: 60rpx;
}

.phone {
  font-size: 26rpx;
  color: rgba(155, 155, 155, 1);
}

.add-btn {
  height: 90rpx;
  border-radius: 6rpx;
  border: 1px solid rgba(167, 167, 167, 1);
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(74, 70, 70, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 690rpx;
  margin: 50rpx auto;

}

.add-btn image {
  position: absolute;
  top: 27rpx;
  right: 20rpx;
  width: 36rpx;
  height: 36rpx;
}