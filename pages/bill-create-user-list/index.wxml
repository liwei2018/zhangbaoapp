<view class="company-list">

  <view class='search'>
    <input class='search-input' placeholder='搜索' confirm-type="search" placeholder-class='search-inpu-placeholder' bindconfirm="search" bindblur="search"  />
  </view>
  <view class="line-item" wx:for="{{userList}}" data-cid="{{item.cid}}" data-gid="{{item.gid}}" bindtap="createbill">
    <view class='item-right'>
      </view>
    <view class='item-mid'>
      <view class='item-name'>
        {{item.name}}
        <view class="renzheng" wx:if="{{item.cid? (item.companyAuth == 1) : (item.userAuth == 1)}}">
          <image class="renzheng-img" src="../../assets/images/user/1.png"></image>
          已认证
        </view>
        <view class="renzheng renzheng2" wx:else> 
          <image class="renzheng-img" src="../../assets/images/bill/1.png"></image>
          未认证
        </view>
        
        <view class="renzheng" wx:if="{{item.legalPerson == 1}}">
          <image class="renzheng-img" src="../../assets/images/bill/2.png"></image>
          法人
        </view>
      </view>
      <view class='time'>
        {{item.cid ? item.company: item.mobile}}
      </view>
    </view>
  </view>
</view>