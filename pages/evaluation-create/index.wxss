.header {
  background-color: #fff;

}

.header-item {
  height: 90rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid rgba(235, 234, 234, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-item .right {
  color: rgba(201, 172, 121, 1);
  display: flex;
  align-items: center;
}

.header-img {
  width: 30rpx;
  height: 30rpx;
}

.red {
  color: #BC372F;
}

.mid {
  padding: 30rpx;
}
.img {
  width: 100%;
  height: 100%;
}
.block {
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  margin-top: 20rpx;
}

.block-header {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid rgba(235, 234, 234, 1);
}

.block-msg {
  font-size: 24rpx;
  color: rgba(151, 151, 151, 1);
  margin-top: 20rpx;
}

.block-content {
  padding: 20rpx;
  overflow: hidden;
  display: flex;
}

.img-upload {
  float: left;
  margin-right: 15rpx;
}

.img-upload-title {
  text-align: center;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.img-upload-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(222, 222, 222, 1);
  position: relative;
}

.img-del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: -15rpx;
  top: -15rpx;
}
.img-add {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60rpx;
  height: 60rpx;
  margin-top: -30rpx;
  margin-left: -30rpx;
}

.textarea {
  background:rgba(249,249,249,1);
  flex: 1;
  padding: 20rpx;
  border-radius:10px;
}
.btn-buy {
  margin-top: 20rpx;
  height: 100rpx;
  background: linear-gradient(360deg, rgba(201, 172, 121, 1) 0%, rgba(243, 217, 172, 1) 100%);


  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: rgba(255, 255, 255, 1);
}