.collection-set {
  padding: 30rpx 30rpx 0;
}

.tip {
  margin: 50rpx 0 30rpx;
  padding-left: 110rpx;
}

.tip-content {
  display: flex;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 33rpx;
}

.tip-content image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.set-default {
  width: 690rpx;
  height: 110rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(45, 47, 55, 1);
  margin-top: 30rpx;
}

.form {
  border-radius: 20rpx;
  overflow: hidden;
}

.form-item {
  height: 110rpx;
  width: 690rpx;
  margin-bottom: 1px;
  background: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.input-title {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(58, 54, 54, 1);
  margin-right: 30rpx;
}

.form-item input {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(207, 207, 207, 1);
}

.btn {
  position: fixed;
  left: 30rpx;
  bottom: 97rpx;
}