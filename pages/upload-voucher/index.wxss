page {
  background: rgba(238, 238, 238, 1);
}

.block2 {
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}

.block2 .text1 {

  font-size: 30rpx;
  color: rgba(102, 102, 102, 1);
}

.block2 .text {
  flex: 1;
}

.block2 .text2 {
  font-size: 24rpx;
  color: rgba(201, 172, 121, 1);
}

.block2 .price {
  font-size: 30rpx;
  color: rgba(199, 78, 70, 1);
  margin-top: 14rpx;
}

.block3 {
  margin-top: 30rpx;
}

.block3-title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 74rpx;
  background-color: #fff;
}

.left-title {
  width: 94rpx;
  height: 2rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 1) 0%, rgba(201, 172, 121, 1) 100%);
}

.right-title {
  width: 94rpx;
  height: 2rpx;
  background: linear-gradient(270deg, rgba(255, 255, 255, 1) 0%, rgba(201, 172, 121, 1) 100%);
}

.mid-title {
  height: 42rpx;
  font-size: 30rpx;
  color: rgba(201, 172, 121, 1);
  line-height: 42rpx;
  padding: 0 18rpx;
}

.block3 .content {
  border-top: 22rpx solid #D8D8D8;
  border-right: 30rpx solid #eee;
  border-bottom: 22rpx solid #D8D8D8;
  border-left: 30rpx solid #eee;
}

.block3 .item {
  height: 162rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  border: 1rpx solid rgba(218, 218, 218, 1);
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
}

.block3 .info-text {
  height: 28rpx;
  font-size: 20rpx;
  color: rgba(34, 34, 34, 1);
  line-height: 28rpx;
}

.info {
  flex: 1;
  margin: 0 40rpx;
}

.btn-sel {
  width: 134rpx;
  height: 42rpx;
  border-radius: 21rpx;
  border: 1rpx solid rgba(201, 172, 121, 1);
  font-size: 18rpx;
  text-align: center;
  line-height: 40rpx;
  color: rgba(201, 172, 121, 1);
}

.block4 {
  margin-top: 30rpx;
  display: flex;
  padding: 0 30rpx;
  height: 128rpx;
  align-items: center;
  background-color: #fff;
}

.address-title {
  height: 45rpx;
  font-size: 32rpx;
  color: rgba(45, 47, 55, 1);
  line-height: 45rpx;
  width: 130rpx;
}

.address-go {
  width: 34rpx;
  height: 34rpx;
}

.address {
  flex: 1;
  margin-left: 40rpx;
}

.address-name {
  display: inline-block;
}

.address-phone {
  display: inline-block;
  color: rgba(155, 155, 155, 1);
  margin-left: 50rpx;
}

.address-info {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 480rpx;
}

.vou {
  padding: 20rpx 30rpx
}

.vou .content {
  background: rgba(255, 255, 255, 1);
  border-radius: 30rpx;
}

.vou-title {
  height: 80rpx;
  font-size: 32rpx;
  color: rgba(45, 47, 55, 1);
  border-bottom: 1rpx solid rgba(229, 229, 229, 1);
  padding: 0 30rpx;
  line-height: 80rpx;
}

.vou-title2 {
  float: right;
  font-size: 22rpx;
  color: rgba(170, 170, 170, 1);
  line-height: 80rpx;
}

.img-upload-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(222, 222, 222, 1);
  position: relative;
}

.img-del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: -15rpx;
  top: -15rpx;
}

.img-add {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60rpx;
  height: 60rpx;
  margin-top: -30rpx;
  margin-left: -30rpx;
}

.vou-upload {
  padding: 20rpx 30rpx;
}

.block5 {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: r26px;
  color: rgba(237, 114, 109, 1);
}
.img-ico {
  width: 70rpx;
  height: 70rpx;
}
.selectedimg {
  display: none;
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.block3 .selected {
  border:2rpx solid rgba(201,172,121,1);
}
.selected .selectedimg {
  display: block;
}

.btn-buy {
  height: 100rpx;
  background: linear-gradient(360deg, rgba(201, 172, 121, 1) 0%, rgba(243, 217, 172, 1) 100%);
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: rgba(255, 255, 255, 1);
}