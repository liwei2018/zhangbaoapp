.form {
  padding: 0 30rpx;
  background: rgba(255, 255, 255, 1);
  margin: 20rpx 0;
}

.form-item {
  display: flex;
  height: 110rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(245, 245, 245, 1);
}

.item-input {
  flex: 1;
  font-size: 28rpx;
  font-weight: 400;
  color: #5A5A5A;
  line-height: 40rpx;
}

.txt {
  height: 200rpx;
}

.default-address {
  height: 90rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.default-txt {
  font-size: 28rpx;
  color: rgba(90, 90, 90, 1);
  line-height: 40rpx;
  font-size: 400;
}

.del {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(199, 73, 57, 1);
  line-height: 40rpx;
  margin: 20rpx 0 61rpx;
}