


/* body */
.body {
  padding: 20rpx 30rpx;
}

/* tabs */
.tabs {
  display: flex;
  justify-content: space-between;
  height: 180rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  padding-left: 33rpx;
  padding-right: 33rpx;
}

.tabs-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.tabs-item-img {
  width: 70rpx;
  height: 70rpx;
}

.tabs-item-text {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(110, 110, 110, 1);
  line-height: 37rpx;
}

.tip-msg {
  width: 28rpx;
  height: 28rpx;
  background: rgba(209, 72, 38, 1);
  border-radius: 14px;
  font-size: 16rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 28rpx;
  text-align: center;
  position: absolute;
  right: -14rpx;
  top: 32rpx;
}

/* buyer */
.buyer {
  height: 222rpx;
  background: rgba(255, 255, 255, 1);
  margin-top: 20rpx;
  padding-top: 20rpx;
}

.auth {
  height: 301rpx;
}

.buyer-tip {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(42, 42, 42, 1);
  line-height: 37rpx;
  margin: 37rpx 0 40rpx;
  text-align: center;
}

.buyer-btn {
  width: 224rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: linear-gradient(360deg, rgba(201, 172, 121, 1) 0%, rgba(243, 217, 172, 1) 100%);
  border-radius: 35rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin: 0 auto;
}

.buyer-title {
  width: 156rpx;
  height: 46rpx;
  background: linear-gradient(360deg, rgba(201, 172, 121, 1) 0%, rgba(243, 217, 172, 1) 100%);
  border-radius: 0px 100rpx 100rpx 0px;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 46rpx;
}

.buyer-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 46rpx 0;
}

.buyer-item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: rgba(110, 110, 110, 1);
}

.buyer-item-count {
  font-size: 38rpx;
  font-weight: 500;
}

.buyer-item-text {
  margin-top: 16rpx;
  font-size: 26rpx;
  font-weight: 400;
}

/* seller */
.seller {
  height: 222rpx;
  background: rgba(255, 255, 255, 1);
  margin-top: 20rpx;
  padding-top: 20rpx;
}

.seller-title {
  width: 156rpx;
  height: 46rpx;
  background: linear-gradient(360deg, rgba(201, 172, 121, 1) 0%, rgba(243, 217, 172, 1) 100%);
  border-radius: 0px 100rpx 100rpx 0px;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 46rpx;
}

.seller-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 46rpx 0;
}

.seller-item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: rgba(110, 110, 110, 1);
}

.seller-item-count {
  font-size: 38rpx;
  font-weight: 500;
}

.seller-item-text {
  margin-top: 16rpx;
  font-size: 26rpx;
  font-weight: 400;
}

/* todos */
.todos {
  margin-top: 22rpx;
  height: 413rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 10px 40px 0px rgba(0, 0, 0, 0.05);
  border-radius: 10px;
}

.todos-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 64rpx;
  border-bottom: 1px solid rgba(235, 234, 234, 1);
  padding: 0 29rpx;
}

.todos-top-left {
  display: flex;
  align-items: center;
}

.icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 11rpx;
}

.title {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(74, 70, 70, 1);
}

.todos-top-right {
  display: flex;
  align-items: center;
}

.left {
  width: 29rpx;
  height: 29rpx;
}

.right {
  width: 29rpx;
  height: 29rpx;
}

.page {
  width: 41rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(83, 83, 83, 1);
  margin: 0 18rpx;
}

.todos-middle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  font-weight: 400;
  height: 62rpx;
  border-bottom: 1px solid rgba(235, 234, 234, 1);
  padding: 0 29rpx;
}

.order-id {
  color: rgba(45, 47, 55, 1);
}

.order-status {
  color: rgba(201, 172, 121, 1);
}

.todos-content {
  padding: 0 30rpx;
  height: 206rpx;
  display: flex;
  align-items: center;
}

.content-img {
  width: 165rpx;
  height: 170rpx;
  background: rgba(246, 247, 249, 1);
  border-radius: 10rpx;
  margin-right: 50rpx;
}

.content-message {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-weight: 400;
  font-size: 22rpx;
  color: rgba(159, 159, 159, 1);
  line-height: 30rpx;
}

.message-title {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 1);
  line-height: 33rpx;
}

.message-time {
  margin: 12rpx 0 6rpx;
}


.price {
  color: #C74E46;
}

.line {
  width: 630rpx;
  height: 1px;
  background: rgba(235, 234, 234, 1);
  margin: 0 auto;
}

.todos-btn {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 78rpx;
  padding: 0 30rpx;
}

.btn {
  width: 150rpx;
  height: 54rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(51, 51, 51, 1);
  text-align: center;
  line-height: 54rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(58, 58, 58, 1);
  margin-left: 16rpx;
}

.primary {
  background: rgba(201, 172, 121, 1);
  color: rgba(255, 255, 255, 1);
  border: none;
}