<!--index.wxml-->
<view class="company">
  <view class='search' wx:if="{{enterprise.length >0}}">
    <view class=""  >
      <view class="enterprise-item" wx:for="{{enterprise}}" bindtap="selected" data-index="{{index}}">
        <view class="title">{{item.enterprise}}</view>
        <view>法定代表人：{{item.legalPerson}}</view>
        <view>统一社会信用代码：{{item.code}}</view>
        <image class="signature" src="{{item.signature}}"  mode="widthFix" />
      </view>
    </view>
  </view>
  <view class="bottom-banner">
    <navigator url="../user-company-add/index">
    <button type="default" bindtap="default" class="other-button-hover" >新建企业</button>
    </navigator>
  </view>
</view>
