 page {
   background-color: rgb(245, 245, 245);
 }

 .top-button-view {
   height: 40px;
   box-shadow: 0 1px 10px 0 rgba(71, 71, 71, .04);
   background: #fff;
   width: 100%;
   position: fixed;
   top: 0;
   z-index: 1;
 }

 .top-button {
   height: 40px;
   float: left;
   width: 50%;
   text-align: center;
   color: #666;
   font-size: 16px;
   position: relative;
   line-height: 40px;
 }

 .select {
   color: #327BF8;
 }

 .select .line {
   position: absolute;
   left: 50%;
   bottom: 1px;

   margin-left: -10px;
   background-color: #327BF8;
   height: 3px;
   border-radius: 2px;
   width: 20px;
 }


 .bill-list {
   margin: 50px 15px 0;

 }

 .list-item {
   margin-bottom: 10px;
   background-color: #fff;
   overflow: hidden;
   border-top: 1px;
   padding: 20px;
   border-radius: 5px;
   box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.05);
   position: relative;
 }

 .item-mid {
   margin-left: 0;
   margin-right: 80px;
   position: relative;
 }

 .item-name {
   font-size: 16px;
   color: #000000;
 }

 .item-other {
   font-size: 12px;
   color: #666666;
 }

 .item-right {
   float: right;
   width: 80px;
   text-align: right;
   display: flex;
   flex-direction: column;
   justify-content: center;
   height: 100%;
   right: 15px;
   top: 0;
   position: absolute;
 }

 .item-value {
   font-size: 12px;
   color: #666666;
   height: 20px;
 }

 .item-value2 {
   font-size: 12px;
   height: 20px;
 }

 .item-state {
   border: 1px solid #333;
   height: 16px;
   border-radius: 10px;
   font-size: 11px;
   text-align: center;
   display: inline-block;
   padding: 0 5px;
   position: relative;
   top: -2px;
   margin-left: 10px;
   color: #333;
 }

 .item-right .item-value {
   text-align: right;
 }

 .item-pirce {
   color: red;
   font-size: 16px;
   word-break:break-all;
 }

 .item-button {
   font-size: 12px;
   background: #327BF8;
   border-radius: 50px;
   padding: 4px 10px;
   color: #fff;
   display: inline-block;
 }

 .fixed-btn {
   position: fixed;
   bottom: 2%;
   width: 51%;
   left: 25%;
   margin-top: 30rpx;
   background-color: #327BF8;
   color: white;
   border-radius: 98rpx;
   justify-content: center;
 }

 .billType0 {
   border-color: #00C468;
   color: #00C468;
 }

 .billType1 {
   border-color: #FF853E;
   color: #FF853E;
 }

 .billType2 {
   border-color: #29A2FF;
   color: #29A2FF;
 }

 .state2 {
   border-color: #00C468;
   color: #00C468;
 }

 .state1 {
   border-color: #FF853E;
   color: #FF853E;
 }

 .state0 {
   border-color: #29A2FF;
   color: #29A2FF;
 }

 .sendCode {
   display: inline-block;
   padding: 5px;
   color: #327BF8;
   border: 1px solid #327BF8;
   float: right;
   width: 90px;
   text-align: center;
 }

 .disable {
   color: #999;
   border: 1px solid #999;
 }

 .codeinput {
   border: 1px solid #999;
   margin-right: 110px;
   padding-left: 5px;
   height: 30px;
 }

 .codeinput-view {
   padding: 20px;
   position: relative;
 }

 .sendCode-btn {
   text-align: center;
   background-color: #327BF8;
   color: #fff;
   padding: 15px 0;
   font-size: 16px;
 }

 .dialog-close {
   position: absolute;
   right: 10px;
   top: 5px;
   font-size: 20px;
 }

 .dialog-title {
   margin-bottom: 10px;
 }
.slide-image {
  width: 100%;
}