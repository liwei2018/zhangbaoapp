  z-index: 1;
  display: flex;
  justify-content: center;
}

.top-button {
  height: 40px;
  float: left;
  width: 25%;
  text-align: center;
  color: #666;
  font-size: 16px;
  position: relative;
  line-height: 40px;
}

.block-blue {
  background-color: #327BF8;
  height: 160px;
  margin-bottom: -110px;
}

.picker-date {
  float: left;
  color: #fff;
