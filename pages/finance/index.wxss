}

.item-button {
  font-size: 12px;
  background: #327BF8;
  border-radius: 50px;
  padding: 4px 10px;
  color: #fff;
  display: inline-block;
}

.fixed-btn {
  position: fixed;
  bottom: 2%;
  width: 51%;
