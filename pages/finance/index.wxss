  border-top: 1px solid #DCDCDC;
}

.item-mid {
  margin-left: 0;
  margin-right: 100px;
  position: relative;
}

.item-name {
  font-size: 16px;
  color: #000000;
}

.item-other {
  font-size: 12px;
  color: #666666;
}

.item-right {
  float: right;
  width: 100px;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  right: 15px;
  top: 0;
  position: absolute;
}

.item-value {
  font-size: 12px;
  color: #666666;
  height: 20px;

  margin-top: 10px;
}

.item-value2 {
