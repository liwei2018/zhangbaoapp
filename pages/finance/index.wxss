}

.search-input {
  background-color: #eee;
  border-radius: 15px;

  height: 40px;

  padding-left: 20px;
}

.search-input-placeholder {
  text-align: center;
}

.bill-list {}

.list-item {
  background-color: #fff;
  overflow: hidden;
  border-top: 1px;
  padding: 20px 0;
