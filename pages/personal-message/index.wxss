/* head */
.view-head {
  width: 100%;
  height: 270rpx;
  background: linear-gradient(45deg,rgba(217,193,146,1) 0%,rgba(201,172,121,1) 100%);
  display: flex;
  align-items: center;
  padding-left: 33rpx;
  position: relative;
}

.head-portrait {
  width: 110rpx;
  height: 110rpx;
  background: rgba(216, 216, 216, 1);
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 55rpx;
}

.portrait-img {
  width: 100%;
  height: 100%;
  border-radius: 55rpx;
}

.head-message {
  color: rgba(255, 255, 255, 1);
  margin-left: 20rpx;
}

.head-message .name {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 45rpx;
}

.edit-img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 18rpx;
}

.head-message .phone {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 33rpx;
  margin-top: 32rpx;
}

.switch {
  width: 144rpx;
  height: 60rpx;
  border-radius: 10rpx;
  opacity: 0.59;
  border: 1rpx solid rgba(255, 255, 255, 1);
  position: absolute;
  top: 105rpx;
  right: 30rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
  text-align: center;
}

/* list */
.list {
  padding: 30rpx;
}

.item {
  width: 690rpx;
  height: 110rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 1rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(45, 47, 55, 1);
  line-height: 42rpx;
}

.back {
  width: 24rpx;
  height: 24rpx;
}

.border-top {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.border-bottom {
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}