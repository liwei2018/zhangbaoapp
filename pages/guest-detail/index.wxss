page {
  background-color: rgb(245,245,245);
}
.top-button-view {
  height: 44px;
  box-shadow: 0 1px 10px 0 rgba(71, 71, 71, .04);
  background: #fff;
  width: 100%;
  top: 0;
  z-index: 1;
  display: flex;
  justify-content: center;
}

.top-button {
  height: 44px;
  float: left;
  width: 33%;
  text-align: center;
  color: #666;
  font-size: 16px;
  position: relative;
  line-height: 44px;
}

.select {
  color: #000;
}

.select .line {
  position: absolute;
  left: 50%;
  bottom: 1px;

  margin-left: -10px;
  background-color: #327BF8;
  height: 3px;
  border-radius: 2px;
  width: 20px;
}
.line-item {
  background-color: #fff;
  padding: 20px 20px;
}
.title {
  background-image: linear-gradient( to left,  #B55F00 0%,#E0B11A 98%);
  border-radius: 2px;
  padding: 0px 5px;
  display: inline-block;
  color: #fff;
  font-size: 10px;
  height: 18px;
  line-height: 18px;
  margin-left: 5px;
}

.item-name {
}

.name {
  font-size: 18px;
  height: 24px;
  line-height: 24px;
}
.btn-right {
  float: right;
}
.time {
  color: #B7B7B7;
  font-size: 14px;
  height: 24px;
  line-height: 24px;
  margin-top: 10px;
}
.icon-btn {
  width: 22px;
  height: 22px;
  float: right;
  margin-left: 13px;
}
.list-item {
  margin-bottom: 10px;
  background-color: #fff;
  overflow: hidden;
  border-top: 1px;
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.05);
  position: relative;
}

.item-mid {
  margin-left: 0;
  margin-right: 100px;
  position: relative;
}

.item-name {
  font-size: 16px;
  color: #000000;
}

.item-other {
  font-size: 12px;
  color: #666666;
}

.item-right {
  float: right;
  width: 100px;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content:center;
  height: 100%;
  right: 15px;
  top: 0;
  position: absolute;
}

.item-value {
  font-size: 12px;
  color: #666666;
  height: 18px;

  margin-top: 10px;
}
.item-value2{
  font-size: 12px;
  height: 20px;
}
.item-state {
  border: 1px solid #333;
  height: 16px;
  border-radius: 10px;
  font-size: 11px;
  text-align: center;
  display: inline-block;
  padding: 0 5px;
  position: relative;
  top: -2px;
  margin-left: 10px;
}

.item-right .item-value {
  text-align: right;
}

.item-pirce {
  color: red;
  font-size: 16px;
}

.item-button {
  font-size: 12px;
  background: #327BF8;
  border-radius: 50px;
  padding: 4px 10px;
  color: #fff;
  display: inline-block;
}

.fixed-btn {
  position: fixed;
  bottom: 2%;
  width: 51%;
  left: 25%;
  margin-top: 30rpx;
  background-color: #327BF8;
  color: white;
  border-radius: 98rpx;
  justify-content: center;
}
.bill-list {
  padding: 20px;
}