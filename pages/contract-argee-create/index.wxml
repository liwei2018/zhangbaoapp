<!-- index.wxml -->
<view class="contract-create" bindtap="boxclick">
  <view class="block">
   <view class='contract-item'>
      <view class='item-left'>授权方：</view>
      <view class='item-right'>
        <view wx:if="{{update}}">{{first}}</view>
        <input wx:else placeholder='请输入对方手机号码或企业名称' value="{{searchtext}}"  bindinput="getfirstParty" />
        <view class="firstPartysearch" wx:if="{{searchShow}}">
          <view class="search-item" wx:for="{{firstPartySearch}}" bindtap="selectfirstParty" data-index="{{index}}">{{item.name}}</view>
          <view class="search-item" wx:if="{{firstPartySearch.length < 1}}">无匹配结果</view>
        </view>
      </view>
    </view>
    <view class='contract-item'>
      <view class='item-left'>被授权方：</view>
      <view class='item-right'>
        <view wx:if="{{update}}">{{second}}</view>
        <picker wx:else range="{{secondPartyArr}}" value="{{index}}" bindchange="getsecondParty">
          <view class='picker-view'>{{secondPartyArr[secondPartyIndex]? secondPartyArr[secondPartyIndex]: '请选择'}}</view>
        </picker>
      </view>
    </view>
    <view class='contract-item' wx:if="{{update}}">
      <view class='item-left'>账单创建日期：</view>
      <view class='item-right'>
        <view>{{createTime}}</view>
      </view>
    </view>
  </view>

  
  <view class='block'>
    <label for='startTime'>
      <view class="attr">
        <view class="attr-name">授权开始日期：</view>
        <view class="attr-value">
          <picker mode="date" id="startTime" bindchange="startTimeChange" class="picker">
            <image class="sanjiao-img" src="../../assets/images/aboutme_ic_enter.png" mode="aspectFit" />
            <view class='picker-body'>{{startTime}}</view>
          </picker>
        </view>
      </view>
    </label>
  </view>
  <view class='block'>
    <label for='endTime'>
      <view class="attr">
        <view class="attr-name">授权结束日期：</view>
        <view class="attr-value">
          <picker mode="date" id="endTime" bindchange="endTimeChange" class="picker">
            <image class="sanjiao-img" src="../../assets/images/aboutme_ic_enter.png" mode="aspectFit" />
            <view class='picker-body'>{{endTime}}</view>
          </picker>
        </view>
      </view>
    </label>
  </view>
  
  <view class="block">
    <view class="attr" bindtap="contractFun">
      <view class="attr-name">查看合同模板</view>
      <view class="attr-value"></view>
      {{contract}}
      <image class="sanjiao-img" src="../../assets/images/aboutme_ic_enter.png" mode="aspectFit" />
    </view>
  </view>
  <view class="bottom-banner">
    <button type="default" bindtap="default" class="other-button-hover" bindtap="submitForm">
      保存并提交
    </button>
  </view>
  <view class='bottom-view'></view>
</view>