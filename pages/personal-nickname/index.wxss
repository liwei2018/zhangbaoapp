.personal-nickname {
  padding: 50rpx 30rpx;
  font-weight: 400;
}

.input-nickname {
  width: 690rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 10rpx 40rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 10rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
  color: rgba(128, 128, 128, 1);
}

.button-nickname {
  width: 688rpx;
  height: 90rpx;
  background: linear-gradient(360deg, rgba(201, 172, 121, 1) 0%, rgba(243, 217, 172, 1) 100%);
  border-radius: 10rpx;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
  margin: 70rpx auto;
  text-align: center;
  line-height: 90rpx;
}