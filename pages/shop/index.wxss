/* pages/evaluation/index.wxss */
page {
  background-color: #fff;
}

.shop {
  padding: 30rpx;
}

.swiper {
  height: 500rpx;
}

.eva-title {
  height: 50rpx;
  background: linear-gradient(360deg, rgba(201, 172, 121, 1) 0%, rgba(243, 217, 172, 1) 100%);
  border-radius: 0px 100px 100px 0px;
  padding: 0 30rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 50rpx;
  overflow: hidden;
  display: inline-block;
  margin-bottom: 40rpx;

}

.tishi-img {
  width: 30rpx;
  height: 30rpx;
  display: block;
}

.tishi-text {
  height: 28rpx;
  font-size: 20rpx;
  color: rgba(134, 134, 134, 1);
  line-height: 28rpx;
  text-align: center;
}

.tishi {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.explain-item-img {
  height: 30rpx;
  width: 30rpx;
  margin-right: 10rpx;
  position: relative;
  top: 5rpx;
}
.address {
  flex:1;
}
.explain-item {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 30rpx;
  display: flex;
}

.tabs {
  height: 90rpx;
  display: flex;
  text-align: center;
  box-shadow: 0px 1px 0px 0px rgba(245, 245, 245, 1);
}

.tabs-item {
  font-size: 30rpx;
  color: rgba(58, 54, 54, 1);
  line-height: 50rpx;
  flex: 1;

  padding: 20rpx;
}

.line {
  width: 2rpx;
  height: 50rpx;
  background: rgba(245, 245, 245, 1);
  margin-top: 20rpx;
}

.tabs .select .nor {
  display: none;
}

.tabs .select .sel {
  display: inline-block;
}

.tabs .select {
  color: rgba(201, 172, 121, 1);
  box-shadow: 0px 13px 30px 0px rgba(128, 128, 128, 0.1);
}


.shop-img {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 50rpx;
}

.shop-img-item {
  width: 32%;
  height: 150rpx;
  margin: 0 1% 4rpx 0;
  border-radius:10rpx;
}
.msg {
  padding: 30rpx 30rpx 0;
}
.btn-copy{
  width:160rpx;
height:60rpx;
background:rgba(201,172,121,1);
border-radius:10rpx;
font-size:28rpx;
color:rgba(255,255,255,1);
line-height: 60rpx;
text-align: center;
}