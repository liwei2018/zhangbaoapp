
.block2 {
  padding: 0 15px;
  overflow: hidden;
}
.user-name {
  text-align: center;
  color: #fff;
}
.userinfo {
  background-color: #fff;
  padding: 20px;
  margin-top: 10px;
  border-radius: 4px;
  overflow: hidden;
}
.money {
  height: 50px;
  padding: 20px 0;
}
.money-item {
  width: 33%;
  height: 60px;
  float: left;
}
.money-item-1 {
  text-align: center;
}


.chongzhi-button{

  width: 70%;
  margin-top: 10rpx;
  color: rgb(68,137,245) !important;
  border-radius: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 32px;
  border-color: rgb(68,137,245) !important;
  font-size: 14px;
}
.chongzhi-button::after {
  border-radius: 40px;
}

.item-mid {
  margin-right: 80px;
  position: relative;
}
.item-right {
  float: right;
  width: 100px;

}
.item-right .item-value {
  text-align: right;
}
.item {
  padding: 20px 0;
  
}
.blue {
  float: right;
}
.shiyong {
  float: left;
}
.package-view {
  padding: 15px 15px 0px;
  overflow: hidden;
}
.pay-icon {
  float: left;
  width: 20px;
  height: 20px;
  margin-right: 5px;
}
.package-title {
  font-weight: 700;
  margin: 10px 0;
}

.package-item {
  border: 1px solid #eee;
  background: #eee;
  padding: 5px 10px;
  border-radius: 20px;
}
.selected {
  color: #327BF8;
  border: 1px solid #327BF8;
}
.pay {
  border-bottom: 1px solid #eee;
  padding-bottom: 20px;
}