<!-- index.wxml -->
<view class="bill-create" bindtap="boxclick">
  <view class="block">
    <view class='bill-item'>
      <view class='item-left'>卖方：</view>
      <view class='item-right'>
        <view wx:if="{{update}}">{{sellerName}}</view>
        <picker wx:else range="{{sellerArr}}" value="{{index}}" bindchange="getseller">
          <view class='picker-view'>{{sellerArr[sellerIndex]? sellerArr[sellerIndex]: '请选择'}}</view>
        </picker>
      </view>
    </view>
    <view class='bill-item'>
      <view class='item-left'>买方：</view>
      <view class='item-right'>
        <view wx:if="{{update}}">{{buyerName}}</view>
        <input wx:else  placeholder='请输入对方手机号码或企业名称' value="{{searchtext}}"  bindinput="getbuyer" />
        <view class="buyersearch" wx:if="{{searchShow}}">
          <view class="search-item" wx:for="{{buyerSearch}}" bindtap="selectbuyer" data-index="{{index}}">{{item.name}}</view>
          <view class="search-item" wx:if="{{buyerSearch.length < 1}}">无匹配结果</view>
        </view>
      </view>
    </view>
    <view class='bill-item' wx:if="{{update}}">
      <view class='item-left'>账单创建日期：</view>
      <view class='item-right'>
        <view>{{createTime}}</view>
      </view>
    </view>
    <view class='bill-item'>
      <view class='item-left'>账单金额：</view>
      <view class='item-right'>
        <input placeholder='限输入数字和小数点' type="digit" value='{{money}}' bindinput="getmoney" />
      </view>
    </view>
  </view>
  <view class="block">
      <view class="attr" bindtap="contractFun">
        <view class="attr-name">关联合同</view>
        <view class="attr-value"></view>
        <image class="sanjiao-img" src="../../assets/images/aboutme_ic_enter.png" mode="aspectFit" />
      </view>
    <view class="contract-line" wx:if="{{contracts.length > 0}}">
      <view wx:for="{{contracts}}" class="contract">
        <view class="bill-item">
          <view class="attr-name">{{item.contractTypeText}}</view>
          <view class="attr-value">{{item.stateText}}</view>
        </view>
        <view class='bill-item'>
          <view class='item-left'>甲方：</view>
          <view class='item-right'>{{item.first}}</view>
        </view>
        <view class='bill-item'>
          <view class='item-left'>乙方：</view>
          <view class='item-right'>{{item.second}}</view>
        </view>
        <view class='bill-item'>
          <view class='item-left'>合同创建日期：</view>
          <view class='item-right'>{{item.createTime}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="block">
    <view class="attr">
      <view class="title-name">单据图片</view>
      <view class='img-view'>
        <view class='img-item' wx:for="{{imgs}}">
          <view class="img-del" bindtap="delimg" data-index="{{index}}">x</view>
          <image class="img" src="{{item}}" />
        </view>
        <view class='img-item img-add' bindtap="addimg" wx:if="{{imgs.length < 9}}">
          <image class="img" src="../../assets/images/icon_addphoto.png" />
        </view>
      </view>
    </view>
  </view>
  <view class="block">
    <view class="title-name">备注信息</view>
    <textarea class='textare1' placeholder="选填，限200个字" value="{{remark}}" focus="{{focus}}" bindinput="getRemark" wx:if="{{textareaShow}}" bindconfirm="textareafun2" bindblur="textareafun2" />
    <view class='textare1' placeholder="选填，限200个字" value="{{remark}}" bindtap="textareafun" wx:if="{{!textareaShow}}">{{remark == ''? '选填，限200个字':remark}}</view>
  </view>
  <view class="bottom-banner">
    <button type="default" bindtap="default" class="other-button-hover" bindtap="submitForm">
      保存并提交
    </button>
  </view>
  <view class='bottom-view'></view>
</view>