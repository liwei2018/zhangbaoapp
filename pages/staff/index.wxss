.company-list {
  padding: 0 20px;
}

.line-item {
  height: 48px;
  padding: 16px 0;
  line-height: 24px;
}

.item-mid {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 60px;
}

.item-name {
  font-size: 16px;
  height: 24px;
}

.name {

  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: left;
}

.time {
  color: #B7B7B7;
  font-size: 12px;
  height: 24px;
}



.company-icon {
  width: 48px;
  height: 48px;
}

.item-left {
  float: left;
}

.item-right {
  float: right;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tanhao {
  height: 20px;
  width: 20px;
}

.fixed-btn {
  width: 90%;
  left: 5%;
}

.img-btn {
  width: 22px;
  height: 22px;
  margin-left: 5px;
  float: right;

  margin-top: 5px;
}

navigator {
  display: inline;
}

.title {
  background-image: linear-gradient( to left,  #B55F00 0%,#E0B11A 98%);
  border-radius: 2px;
  padding: 0px 5px;
  display: inline-block;
  color: #fff;
  font-size: 10px;
  height: 18px;
  line-height: 18px;
  margin-left: 5px;
}
