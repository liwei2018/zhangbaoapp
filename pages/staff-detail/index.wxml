<!-- index.wxml -->
<wxs src="../../components/utils/time.wxs" module="time" />
<view class="staff">
  <view class="line-item">
    <view class='btn-right'>
      <view class="icon-view">
        <image class="icon-btn" bindtap="call" src="../../assets/images/guest/1.png" />
        <navigator url="../guest-create/index?gid={{guest.gid}}" wx:if="{{op==1}}">
          <image class="icon-btn" src="../../assets/images/guest/2.png" />
        </navigator>
        <navigator url="../staff-create/index?sid={{guest.sid}}" wx:if="{{op==0}}">
          <image class="icon-btn" src="../../assets/images/guest/2.png" />
        </navigator>
        <image class="icon-btn" wx:if="{{op==1}}" src="../../assets/images/bill/3.png" bindtap="createbill" data-gid="{{guest.gid}}" data-cid="{{guest.cid}}" />
      </view>
      <view class="pic" wx:if="{{op==1}}">
        <view class="pic-title">应付</view>
        <view class="pic-val">￥{{guest.payment}}</view>
      </view>
      <view class="pic" wx:if="{{op==1}}">
        <view class="pic-title">应收</view>
        <view class="pic-val">￥{{guest.collection}}</view>
      </view>
    </view>
    <view class='item-mid'>
      <view class='item-name'>
        <view class="name">
          {{guest.name}}
          <view class="renzheng" wx:if="{{guest.userAuth == 1}}">
            <image class="renzheng-img" src="../../assets/images/user/1.png"></image>
            已认证
          </view>
          <view class="renzheng renzheng2" wx:else>
            <image class="renzheng-img" src="../../assets/images/bill/1.png"></image>
            未认证
          </view>
        </view>
      </view>
      <view class='time' wx:if="{{op==1}}">{{guest.company}}</view>
      <view class='time'>{{guest.mobile}}</view>
    </view>
  </view>
  <view class="">
    <view class="top-button-view">
      <view class="top-button  {{billType == 0?'select':''}}" bindtap="clickTab" data-billType="0">
        对账单
        <view class='line'></view>
      </view>
      <view class="top-button {{billType == 1?'select':''}}" bindtap="clickTab" data-billType="1">
        确认书
        <view class='line'></view>
      </view>
      <view class="top-button  {{billType == 2?'select':''}}" bindtap="clickTab" data-billType="2">
        收款单
        <view class='line'></view>
      </view>
    </view>
    <view class="bill-list">
      <navigator url="../bill-detail/index?id={{item.bid}}" wx:for="{{bills}}">
        <view class="list-item">
          <view class='item-right'>
            <view class='item-value2'>总金额</view>
            <view class='item-pirce'>￥{{item.money}}</view>
            <view></view>
          </view>
          <view class='item-mid'>
            <view class='item-name'>
              {{item.first}}
              <view class="item-state state{{item.state}}">{{item.stateText}}</view>
            </view>
            <view class='item-value'>创建日期：{{time.format(item.createTime)}}</view>
          </view>
        </view>
      </navigator>
    </view>
  </view>
</view>