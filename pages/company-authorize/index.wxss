.company-list {
  padding: 0 20px;
}

.line-item {
  height: 48px;
  padding: 16px 0;
  line-height: 24px;
}

.item-mid {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 60px;
  margin-right: 60px;
}

.item-name {
  font-size: 16px;
  height: 24px;
}
.name {

  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: left;
}
.time {
  color: #B7B7B7;
  font-size: 12px;
  height: 24px;
}



.company-icon {
  width: 48px;
  height: 48px;
}

.item-left {
  float: left;
}
.item-right {
  float: right;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.watch {
  height: 24px;
  border-radius: 13px;
  background-color: #327BF8;
  color: #fff;
  line-height: 24px;
  width: 56px;
  text-align: center;
}
.fixed-btn {
  width: 90%;
  left: 5%;
}
.img-btn {
  width: 22px;
  height: 22px;
  margin-left: 5px;
  float: right;

  margin-top: 5px;
}
.shouquan {
  border: 1px solid #29A2FF;
  border-radius: 8px;
  padding: 1px 3px;
  color: #29A2FF;
  font-size: 10px;
  display: inline-block;
  margin-top: 5px;
  height: 14px;
  line-height: 14px;
}
navigator {
  display: inline;
}