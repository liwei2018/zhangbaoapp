.company-list {
  padding: 0 20px;
}

.line-item {
  height: 48px;
  padding: 16px 0;
  line-height: 24px;
}

.item-mid {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 60px;
  height: 100%;
}

.item-name {
  font-size: 16px;
}

.name {

  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: left;
  
  font-size: 16px;
}

.time {
  color: #B7B7B7;
  font-size: 14px;
  height: 24px;
}



.company-icon {
  width: 48px;
  height: 48px;
}

.item-left {
  float: left;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-right {
  float: right;
}

.tanhao {
  height: 20px;
  width: 20px;
}


.btn {
  width: 68px;
  height: 24px;
  border-radius: 12px;
  text-align: center;
  color: #327BF8;
  border:1px solid #327BF8;
}

navigator {
  display: inline;
}
.search {
  padding: 10px;
}
.search-input {
  background-color: #eee;
  border-radius: 15px;
  
  height: 40px;
  
  padding-left: 20px;
}
.search-input-placeholder {
  text-align: center;
}
.btn-img {
  height: 22px;
  width: 22px;
}
.renzheng {
  border: 1px solid #327BF8;
  border-radius: 2px;
  padding: 1px 3px;
  color: #327BF8;
  font-size: 10px;
  display: inline-block;
  margin-top: 5px;
  height: 14px;
  line-height: 14px;
  margin-right: 3px;
}
.renzheng-img {

  width: 10px;
  height: 10px;
}
.renzheng2 {
  border: 1px solid red;
  color: red;
}