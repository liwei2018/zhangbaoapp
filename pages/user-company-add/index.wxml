<!-- index.wxml -->
<view class="company">
  <view class='search'>
    <input class='search-input' placeholder='输入企业名称' placeholder-class='search-inpu-placeholder' bindconfirm="search" bindblur="search" />
    <view class="" wx:if="{{enterprise}}"  >
      <view class="enterprise-item" wx:for="{{enterprise}}" bindtap="selected" data-index="{{index}}">
        <view class="title">{{item.enterprise}}</view>
        <view>法定代表人：{{item.legalPerson}}</view>
        <view>统一社会信用代码：{{item.code}}</view>
      </view>
    </view>
    <view class="nothing" wx:if="{{enterprise.length == 0 && searched}}">无匹配结果，请检查输入的信息是否正确</view>
  </view>
  <view class="search" wx:if="{{enterpriseObj.enterprise}}">
    <view class="enterprise-item" >
      <view class="title">{{enterpriseObj.enterprise}}</view>
        <view>法定代表人：{{enterpriseObj.legalPerson}}</view>
        <view>统一社会信用代码：{{enterpriseObj.code}}</view>
    </view>
  </view>
  <view class="bottom-banner">
    <button class="other-button-hover" bindtap="create" wx:if="{{!login}}">
      确认提交
    </button>
    <view wx:else>
    <navigator  open-type="switchTab" url="../bill/index">
      <button class="other-button-hover other-button-hover-2 blue-btn">
        取消，开始体验
      </button>
      </navigator>
      <button class="other-button-hover other-button-hover-2 blue-btn" bindtap="create">
        提交，开始体验
      </button>
    </view>
  </view>
</view>