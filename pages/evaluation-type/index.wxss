/* pages/evaluation/index.wxss */
.eva {
  padding: 30rpx 0;
}
.eva-title {
  height: 66rpx;
  text-align: center;
  line-height: 66rpx;
}
.img {
  width: 100%;
  
  border-radius:  10rpx 10rpx 0 0;
}
.eva-item {
  border-radius: 10rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow:0px 10px 40rpx 0px rgba(0,0,0,0.15);
  width: 270rpx;
}
.eva-block {
  width: 50%;
  float: left;
  display: flex;
  justify-content: center;
}
.tishi-img {
  width: 30rpx;
  height: 30rpx;
  display: block;
}
.tishi-text {
  height:28rpx;
font-size:20rpx;
color:rgba(134,134,134,1);
line-height:28rpx;
text-align: center;
}
.tishi{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}