<!-- index.wxml -->
<view class="company">
  <view class='search'>
    <view class="" wx:if="{{authorize}}"  >
      <navigator url="../contract-detail/index?id={{item.cid}}" wx:for="{{authorize}}">
        <view wx:if="{{item.type == 1}}" class='item'>
          <view class="title">{{item.name}}</view>
          <view>法定代表人：{{item.legalPerson}}</view>
          <view>统一社会信用代码：{{item.code}}</view>
          <view>授权有效期：{{item.startTime}}至{{item.endTime}}</view>
          <view class='btn-fix blue'>查看授权 ></view>
        </view>
        <view wx:else class='item'>
          <view>授权人：{{item.name}}</view>
          <view>授权有效期：{{item.startTime}}至{{item.endTime}}</view>
          <view class='btn-fix blue'>查看授权 ></view>
        </view>
      </navigator>
    </view>
    <view class="nothing" wx:if="{{authorize.length == 0}}">暂无授权</view>
  </view>
</view>