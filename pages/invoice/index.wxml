<view class="invoice-block">
  <view class="line-item">
    <input placeholder='请输入企业全称' value="" bindinput="getcompany" />
  </view>
  <view class="line-item">
    <input placeholder='请输入企业识别码' value="" bindinput="getcode" />
  </view>
  <view class="line-item">
    <input placeholder='请输入开户行信息' value="" bindinput="getbank" />
  </view>
  <view class="line-item">
    <input placeholder='请输入开户行账号' value="" bindinput="getbankAccount" />
  </view>
  <view class="line-item">
    <input placeholder='请输入申请金额                     最多可申请：{{money2}}元' value="" bindinput="getmoney" />
  </view>
  <view class="line-item">
    <input placeholder='请输入收件人姓名' value="" bindinput="getname" />
  </view>
  <view class="line-item">
    <input placeholder='请输入收件人手机' value="" bindinput="getmobile" />
  </view>
  <view class="line-item">
    <input placeholder='请输入收件人地址' value="" bindinput="getaddress" />
  </view>
  <button class="blue-btn" bindtap="create">申请发票</button>
</view>
<view class="bottom-black">
  <navigator url="../invoice-log/index">
    <view class="invoice-log">申请发票记录</view>
  </navigator>
</view>