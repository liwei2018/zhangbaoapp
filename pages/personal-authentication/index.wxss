.name-part {
  padding: 30rpx 30rpx 0;
  background: rgba(255, 255, 255, 1);
  height: 110rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
}

.name-text {
  color: rgba(58, 54, 54, 1);
}

.name-input {
  color: rgba(151, 151, 151, 1);
  width: 140rpx;
}

.photo-part {
  height: 487rpx;
  margin: 22rpx 30rpx 80rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 10px 40px 0px rgba(0, 0, 0, 0.05);
  border-radius: 10px;
  padding: 30rpx 20rpx 40rpx;
}

.photo-title {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(58, 54, 54, 1);
}

.photo {
  margin: 40rpx 0 50rpx;
  display: flex;
  justify-content: space-between;
}

.photo image {
  width: 316rpx;
  height: 220rpx;
}

.photo-btn {
  display: flex;
  justify-content: space-between;
  padding: 0 60rpx;
}

.btn {
  width: 216rpx;
  height: 62rpx;
  background: linear-gradient(360deg, rgba(201, 172, 121, 1) 0%, rgba(243, 217, 172, 1) 100%);
  border-radius: 35rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 62rpx;
}

.bottom-btn {
  width: 690rpx;
  margin: 0 auto;
  height: 90rpx;
  background: linear-gradient(360deg, rgba(201, 172, 121, 1) 0%, rgba(243, 217, 172, 1) 100%);
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 90rpx;
  text-align: center;
}