.top-button-view {
  height: 40px;
  box-shadow: 0 1px 10px 0 rgba(71, 71, 71, .04);
  background: #fff;
  width: 100%;
  top: 0;
  z-index: 1;
  display: flex;
  justify-content: center;
}

.top-button {
  height: 40px;
  float: left;
  width: 25%;
  text-align: center;
  color: #666;
  font-size: 16px;
  position: relative;
  line-height: 40px;
}
.block-blue {
  background-color: #327BF8;
  height: 160px;
  margin-bottom: -100px;
}
.user-header {
  overflow: hidden;
}
.user-photo {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.header-1{
  float: left;
  width: 70px;
}
.header-2{
  margin: 0 30px 0 70px;
}
.header-3{
  
  float: right;
  width: 20px;
}
.header-name {
  font-size: 20px;
}
.header-name2 {
  font-size: 14px;
  color: #666;
  margin-top: 5px;
}
.renzheng {
  border: 1px solid #327BF8;
  border-radius: 2px;
  padding: 1px 3px;
  color: #327BF8;
  font-size: 10px;
  display: inline-block;
  margin-left: 5px;
}
.renzheng2 {
  border: 1px solid red;
  color: red;
}
.header-setting {
  width: 20px;
  height: 20px;
}
.renzheng-img {

  width: 10px;
  height: 10px;
}
.money {
  overflow: hidden;
}
.money-item {
  width: 33%;
  height: 60px;
  float: left;
  margin-top: 24px;
}
.money-item-1 {
  text-align: center;
  font-size: 20px;
}
.money-item-2 {
  text-align: center;
  font-size: 14px;
  margin-top: 8px;
}
.select {
  color: #327BF8;
}

.select .line {
  position: absolute;
  left: 50%;
  bottom: 1px;

  margin-left: -10px;
  background-color: #327BF8;
  height: 3px;
  border-radius: 2px;
  width: 20px;
}
.block-blue .top-button-view {
  height: 40px;
  box-shadow: none;
  background: transparent;
  width: 120px;
  top: 0;
  z-index: 1;
  display: flex;
  justify-content: center;
  float: left;
}
.block-blue .top-button {
  height: 40px;
  float: left;
  width: 50%;
  text-align: center;
  color: #fff;
  font-size: 16px;
  position: relative;
  line-height: 40px;
}
.block-blue .select {
  color: #fff;

}
.block-blue .select .line {
  background-color: #fff;
}
.sanjiao-img {
  height: 60px;
  display: inline-block;
  width: 10px;
  margin-left: 10px;
  float: right;
}
.icon-img {
  height: 20px;
  display: inline-block;
  width: 20px;
  margin-right: 10px;
  float: left;
  margin-top: 20px;
}