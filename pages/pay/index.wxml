<!-- index.wxml -->
<view class="pay">
  <view class="part1">
    <view class="item">
      <view class="left">订单号</view>
      <view class="right">{{orderNum}}</view>
    </view>
    <view class="item">
      <view class="left">购买套餐</view>
      <view class="right">{{packageInfo}}</view>
    </view>
    <view class="item">
      <view class="left">支付金额</view>
      <view class="right">{{price}}</view>
    </view>
  </view>
  <view class="part2">
    <view class="part2-title">请选择支付方式</view>
    <view class="line-item">
      <image src="../../assets/images/个人中心/ic_微信支付@2x.png" class="pay-icon"></image>
      <view class="pay-name">微信支付</view>
      <image src="../../assets/images/个人中心/ic_已选@2x.png" class="pay-radio"></image>
    </view>
  </view>
  <view class="part3">
    <view class="part3-pirce">合计金额：<text class="pirce">{{price}}元</text></view>
    <button class="blue-btn pay-btn" open-type="getUserInfo"  bindtap="submit">去支付
    </button>
  </view>
</view>